{
  "name": "@openclaw/desktop-shell",
  "private": true,
  "version": "0.0.1",
  "description": "OpenClaw desktop control shell",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json && pnpm copy:shell-assets",
    "clean": "rm -rf dist",
    "copy:shell-assets": "node -e \"const fs=require('node:fs');fs.mkdirSync('dist/renderer',{recursive:true});fs.cpSync('src/renderer/index.html','dist/renderer/index.html');fs.cpSync('src/renderer/styles.css','dist/renderer/styles.css');\"",
    "dev": "pnpm build && electron dist/main.js",
    "dist": "pnpm build && electron-builder"
  },
  "dependencies": {
    "electron": "^31.7.7"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "electron-builder": "^24.13.3",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "ai.openclaw.desktop",
    "productName": "OpenClaw Desktop",
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
